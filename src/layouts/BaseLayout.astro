---
import "../styles/global.css";
import {baseLayoutConfig} from "~/config/layoutConfig.ts";

interface Props {
  title?: string;
  description?: string;
}

const { title = baseLayoutConfig.title, description = baseLayoutConfig.description } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-slate-50 text-slate-900 antialiased transition-colors duration-150 dark:bg-slate-950 dark:text-slate-50">
    <main class="mx-auto flex min-h-screen max-w-5xl flex-col gap-12 px-6 py-10 lg:px-10 lg:py-16">
      <slot />
    </main>
  </body>
</html>
