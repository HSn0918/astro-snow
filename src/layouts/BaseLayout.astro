---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const { title = "Snow Blog", description = "Astro + React 19 starter" } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <div class="page-shell">
      <header class="topbar">
        <a class="logo" href="/">Snow</a>
        <span class="pill">Astro · React 19 · StyleX</span>
      </header>
      <main>
        <slot />
      </main>
      <footer class="footer">
        <p>Built with Astro, React 19, and friends.</p>
      </footer>
    </div>
  </body>
</html>
