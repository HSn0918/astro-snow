---
import BaseLayout from "@/layouts/BaseLayout.astro";
import HomePage from "~/components/home/HomePage";
---

<BaseLayout title="Snowの小窝" description="欢迎来到Snow的博客" fullScreen={true}>
  <HomePage />
</BaseLayout>

<style>
  @keyframes floatDown {
    0% {
      transform: translateY(-20%);
      opacity: 0;
    }
    30% {
      opacity: 1;
    }
    100% {
      transform: translateY(120%);
      opacity: 0;
    }
  }
</style>
